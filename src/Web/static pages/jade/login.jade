extends layout

block content
  link(href="../less/login.css" rel="stylesheet")
  .container#loginContainer
    form.form-group
      label(for="inputEmail3" class="col-sm-2 control-label") Email
      input(name="email" type="email" class="form-control" id="inputEmail3" placeholder="Email")
    form.form-group
      label(for="inputPassword3" class="col-sm-2 control-label") Password
      input(name="password" type="password" class="form-control" id="inputPassword3" placeholder="Password")
    form.form-group
      label(for="inputPassword3" class="col-sm-2 control-label") Remember me
      input(type="checkbox")
    form.form-group
      .col-sm-offset-2.col-sm-10
        button(type="submit" class="btn btn-default") Sign in

